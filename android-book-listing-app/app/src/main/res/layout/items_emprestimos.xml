<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:paddingLeft="5dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cod_emprestimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="codigo livro"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <Spinner
            android:id="@+id/spinner_livros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overlapAnchor="true"
            android:clickable="false"
            android:spinnerMode="dropdown"
            />

<!--        <TextView-->
<!--            android:id="@+id/titulo_emprestimo"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="5dp"-->
<!--            android:text="titulo livro"-->
<!--            android:textSize="15sp"-->
<!--            android:textColor="@android:color/black"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dados"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">


            <TextView
                android:id="@+id/data_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="data final"
                android:layout_toRightOf="@id/hifen"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/hifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text=" - "
                android:layout_toRightOf="@id/data_inicial"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/data_inicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data inicial"
                android:layout_marginRight="10sp"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
