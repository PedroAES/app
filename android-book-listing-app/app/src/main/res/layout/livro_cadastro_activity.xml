<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context="com.example.android.livros.activity.CadastroActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Cadastro de Livro"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:hint="Código do livro"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:hint="Título"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:hint="Autor"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/spinner_sessoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overlapAnchor="true"
        android:clickable="true"
        android:spinnerMode="dropdown"
        />

<!--    <EditText-->
<!--        android:id="@+id/codigo_sessao"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="5dp"-->
<!--        android:background="@android:color/white"-->
<!--        android:hint="Codigo da Sessão"-->
<!--        android:inputType="textPassword"-->
<!--        android:padding="10dp" />-->

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#f05924"
        android:text="Salvar"
        android:textColor="@android:color/white"
        android:onClick="cadastrarLivro"/>
</LinearLayout>
